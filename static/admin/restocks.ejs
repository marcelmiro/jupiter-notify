<!DOCTYPE html>
<html lang="en">
<head>
	<!--    MAIN INFO    -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<title>Admin Panel</title>

	<!--    FONTS    -->
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

	<!--    MAIN CSS    -->
	<link rel="stylesheet" href="/css/admin/admin.css">
	<link rel="stylesheet" href="/Components/Sidebar.css">
	<link rel="stylesheet" href="/Components/Popup.css">
	<link rel="stylesheet" href="/Components/Dropdown.css">
	<link rel="stylesheet" href="/Components/Toggle.css">
	<link rel="stylesheet" href="/css/admin/restocks.css">

	<!--    FAVICON    -->
	<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicons/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicons/favicon-16x16.png">
	<link rel="manifest" href="/assets/favicons/site.webmanifest">
	<link rel="mask-icon" href="/assets/favicons/safari-pinned-tab.svg" color="#ff8e00">
	<link rel="shortcut icon" href="/assets/favicons/favicon.ico">
	<meta name="msapplication-TileColor" content="#da532c">
	<meta name="msapplication-config" content="/assets/favicons/browserconfig.xml">
	<meta name="theme-color" content="#ffffff">

	<% if (!permissions) { %>
		<script type="text/javascript">window.location.href = '/admin'</script>
	<% } %>
</head>
<body>

<main v-cloak>
	<sidebar page="restocks"></sidebar>

	<div class="app">
		<div class="app__container">
			<h1>Restocks</h1>
			<div class="card min-height">
				<div class="card__container">
					<div class="card__interaction">
						<dropdown v-model="role" :items="['all', ...restockRoleNames]"></dropdown>

						<% if (permissions.includes('m') || permissions.includes('u')) { %>
							<div class="in-stock">
								<span>Stock</span>
								<toggle v-model="inStock" @click="updateInStock"></toggle>
							</div>
						<% } %>

						<% if (permissions.includes('m') || permissions.includes('c')) { %>
							<button class="add" @click="$refs.addRestock.open()">Add Restock</button>
						<% } %>
					</div>
					<div class="table">
						<div class="table__header">
							<span class="heading heading-status"></span>
							<span class="heading heading-password">password</span>
							<span class="heading heading-role">role</span>
							<span class="heading heading-stock">stock</span>
							<span class="heading heading-interaction"></span>
						</div>
						<div class="table__line"></div>
						<div class="table__content">
							<div class="table__row" v-for="restock in paginatedRestocks">
								<div class="status">
									<div class="checkbox" :class="{ active: restock.active }"></div>
								</div>
								<div class="password">
									<span>{{ restock.password }}</span>
									<button>
										<img @click="copy(restock.password)" src="/assets/icon_copy.svg" alt="Copy">
									</button>
								</div>
								<div class="role">
									<tag :text="restock.role.name" :background-color="restock.role.color"></tag>
								</div>
								<div class="stock">
									<span>
										{{ restock.stock && restock.total
												? restock.stock + ' / ' + restock.total
												: restock.stock || 'unknown' }}
									</span>
								</div>
								<div class="table__row__interaction">
									<% if (permissions.includes('m') || permissions.includes('u')) { %>
										<button @click="openEditRestock(restock)">
											<img src="/assets/icon_edit.svg" alt="Edit">
										</button>
									<% } %>

									<% if (permissions.includes('m') || permissions.includes('d')) { %>
										<button @click="openDeleteRestock(restock.password)">
											<img src="/assets/icon_delete.svg" alt="Delete">
										</button>
									<% } %>
								</div>
							</div>
						</div>
					</div>
					<button
						class="load-more"
						@click="listSize += initSize"
						v-if="filteredRestocks.length > listSize"
					>Load More</button>
				</div>
			</div>
		</div>
	</div>

	<% if (permissions.includes('m') || permissions.includes('c')) { %>
		<popup ref="addRestock">
			<div class="field">
				<p>Password</p>
				<div class="input">
					<label>
						<input type="text" v-model="addRestockObject.password" placeholder="Password (Optional)">
					</label>
				</div>
			</div>
			<div class="field">
				<p>Role</p>
				<dropdown v-model="addRestockObject.role" :items="roleNames"></dropdown>
			</div>
			<div class="field">
				<p>Stock</p>
				<div class="input">
					<label><input type="number" v-model="addRestockObject.stock" placeholder="Stock"></label>
				</div>
			</div>
			<div class="field">
				<p>Start Time</p>
				<div class="input">
					<label>
						<input type="datetime-local" v-model="addRestockObject.dateTime" placeholder="Start Time (Optional)">
					</label>
				</div>
			</div>

			<div class="popup__interaction">
				<button @click="$refs.addRestock.close()">Cancel</button>
				<button @click="addRestock">Add</button>
			</div>
		</popup>
	<% } %>

	<% if (permissions.includes('m') || permissions.includes('u')) { %>
		<popup ref="editRestock" @close="editRestock={}">
			<div class="field">
				<p>Stock</p>
				<div class="input">
					<label><input type="number" v-model="editRestock.stock" placeholder="Stock"></label>
				</div>
			</div>
			<div class="field">
				<p>Start Time</p>
				<div class="input">
					<label><input type="datetime-local" v-model="editRestock.dateTime" placeholder="Start Time (Optional)"></label>
				</div>
			</div>

			<div class="popup__interaction">
				<button @click="$refs.editRestock.close()">Cancel</button>
				<button @click="updateRestock">Save</button>
			</div>
		</popup>
	<% } %>

	<% if (permissions.includes('m') || permissions.includes('d')) { %>
		<popup ref="deleteRestock" @close="deleteRestockPassword=''">
			<p class="field title">Are you sure you want to delete this restock?</p>
			<div class="popup__interaction">
				<button @click="$refs.deleteRestock.close()">Cancel</button>
				<button class="red" @click="deleteRestock">Delete</button>
			</div>
		</popup>
	<% } %>
</main>


<script src="/js/vue.js"></script>
<script src="/js/socket.io.js"></script>
<script src="/Components/Sidebar.js"></script>
<script src="/Components/Popup.js"></script>
<script src="/Components/Dropdown.js"></script>
<script src="/Components/Toggle.js"></script>
<script src="/Components/Tag.js"></script>

<script type="text/javascript">
	window.socket = io()
	window.roles = JSON.parse('<%- JSON.stringify(roles) %>')
</script>
<script src="/js/admin/restocks.js"></script>
</body>
</html>
