<!DOCTYPE html>
<html lang="en">
<head>
	<!--    MAIN INFO    -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<title>Admin Panel</title>

	<!--    FONTS    -->
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

	<!--    MAIN CSS    -->
	<link rel="stylesheet" href="/css/admin/admin.css">
	<link rel="stylesheet" href="/Components/Sidebar.css">
	<link rel="stylesheet" href="/Components/Popup.css">
	<link rel="stylesheet" href="/Components/Dropdown.css">
	<link rel="stylesheet" href="/Components/Toggle.css">
	<link rel="stylesheet" href="/css/admin/roles.css">

	<!--    FAVICON    -->
	<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicons/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicons/favicon-16x16.png">
	<link rel="manifest" href="/assets/favicons/site.webmanifest">
	<link rel="mask-icon" href="/assets/favicons/safari-pinned-tab.svg" color="#ff8e00">
	<link rel="shortcut icon" href="/assets/favicons/favicon.ico">
	<meta name="msapplication-TileColor" content="#da532c">
	<meta name="msapplication-config" content="/assets/favicons/browserconfig.xml">
	<meta name="theme-color" content="#ffffff">

	<% if (!permissions) { %>
		<script type="text/javascript">window.location.href = '/admin'</script>
	<% } %>
</head>
<body>

<main v-cloak>
	<sidebar page="roles"></sidebar>

	<div class="app">
		<div class="app__container">
			<h1>Roles</h1>
			<div class="card min-height">
				<div class="card__container">
					<div class="card__interaction">
						<% if (permissions.includes('m') || permissions.includes('c')) { %>
							<button class="add" @click="$refs.addRole.open()">Add Role</button>
						<% } %>
					</div>
					<div class="table">
						<div class="table__header">
							<span class="heading heading-role">Role</span>
							<span class="heading heading-discord_id">Discord Id</span>
							<span class="heading heading-transferable">transferable</span>
							<span class="heading heading-interaction"></span>
						</div>
						<div class="table__line"></div>
						<div class="table__content">
							<div class="table__row" v-for="role in paginatedRoles">
								<div class="role">
									<tag :text="role.name" :background-color="role.color"></tag>
								</div>
								<div class="discord-id">
									<span>{{ role.discordId }}</span>
								</div>
								<div class="transferable">
									<span>{{ role.transferable }}</span>
								</div>

								<div class="table__row__interaction">
									<% if (permissions.includes('m') || permissions.includes('u')) { %>
										<button @click="openEditRole(role)">
											<img src="/assets/icon_edit.svg" alt="Edit">
										</button>
									<% } %>

									<% if (permissions.includes('m') || permissions.includes('d')) { %>
										<button @click="openDeleteRole(role.id)">
											<img src="/assets/icon_delete.svg" alt="Delete">
										</button>
									<% } %>
								</div>
							</div>
						</div>
					</div>
					<button
						class="load-more"
						@click="listSize += initSize"
						v-if="filteredRoles.length > listSize"
					>Load More</button>
				</div>
			</div>
		</div>
	</div>

	<% if (permissions.includes('m') || permissions.includes('c')) { %>
		<popup ref="addRole">
			<div class="field">
				<p>Name</p>
				<div class="input">
					<label><input type="text" v-model="addRoleObject.name" placeholder="Name"></label>
				</div>
			</div>
			<div class="field">
				<p>Color</p>
				<div class="input">
					<label><input type="text" v-model="addRoleObject.color" placeholder="Color (Optional)"></label>
				</div>
			</div>
			<div class="field">
				<p>Discord Id</p>
				<div class="input">
					<label><input type="text" v-model="addRoleObject.discordId" placeholder="Discord Id (Optional)"></label>
				</div>
			</div>
			<div class="field inline">
				<p>Transferable</p>
				<toggle v-model="addRoleObject.transferable"></toggle>
			</div>

			<div class="popup__interaction">
				<button @click="$refs.addRole.close()">Cancel</button>
				<button @click="addRole">Add</button>
			</div>
		</popup>
	<% } %>

	<% if (permissions.includes('m') || permissions.includes('u')) { %>
		<popup ref="editRole" @close="editRole={}">
			<div class="field">
				<p>Name</p>
				<div class="input">
					<label><input type="text" v-model="editRole.name" placeholder="Name"></label>
				</div>
			</div>
			<div class="field">
				<p>Color</p>
				<div class="input">
					<label><input type="text" v-model="editRole.color" placeholder="Color (Optional)"></label>
				</div>
			</div>
			<div class="field">
				<p>Discord Id</p>
				<div class="input">
					<label><input type="text" v-model="editRole.discordId" placeholder="Discord Id (Optional)"></label>
				</div>
			</div>
			<div class="field inline">
				<p>Transferable</p>
				<toggle v-model="editRole.transferable"></toggle>
			</div>

			<div class="field inline">
				<p>Administrator</p>
				<toggle v-model="editRole.permissions.administrator"></toggle>
			</div>
			<div class="field inline">
				<p>Importance</p>
				<div class="input">
					<label><input type="number" v-model="editRole.permissions.importance" placeholder="Importance"></label>
				</div>
			</div>
			<div class="field inline" v-if="!editRole.permissions.administrator">
				<p>Stats</p>
				<div class="input">
					<label><input type="text" v-model="editRole.permissions.stats" placeholder="Stats"></label>
				</div>
			</div>
			<div class="field inline" v-if="!editRole.permissions.administrator">
				<p>Members</p>
				<div class="input">
					<label><input type="text" v-model="editRole.permissions.members" placeholder="Members"></label>
				</div>
			</div>
			<div class="field inline" v-if="!editRole.permissions.administrator">
				<p>Restocks</p>
				<div class="input">
					<label><input type="text" v-model="editRole.permissions.restocks" placeholder="Restocks"></label>
				</div>
			</div>
			<div class="field inline" v-if="!editRole.permissions.administrator">
				<p>Roles</p>
				<div class="input">
					<label><input type="text" v-model="editRole.permissions.roles" placeholder="Roles"></label>
				</div>
			</div>
			<div class="field inline" v-if="!editRole.permissions.administrator">
				<p>Products</p>
				<div class="input">
					<label><input type="text" v-model="editRole.permissions.products" placeholder="Products"></label>
				</div>
			</div>
			<div class="field inline" v-if="!editRole.permissions.administrator">
				<p>Logs</p>
				<div class="input">
					<label><input type="text" v-model="editRole.permissions.logs" placeholder="Logs"></label>
				</div>
			</div>
			<div class="field inline" v-if="!editRole.permissions.administrator">
				<p>Settings</p>
				<div class="input">
					<label><input type="text" v-model="editRole.permissions.settings" placeholder="Settings"></label>
				</div>
			</div>

			<div class="popup__interaction">
				<button @click="$refs.editRole.close()">Cancel</button>
				<button @click="updateRole">Save</button>
			</div>
		</popup>
	<% } %>

	<% if (permissions.includes('m') || permissions.includes('d')) { %>
		<popup ref="deleteRole" @close="deleteRoleId=undefined">
			<p class="field title">
				Are you sure you want to delete this role?
				All members, products and restocks with that role will be deleted too...
			</p>
			<div class="popup__interaction">
				<button @click="$refs.deleteRole.close()">Cancel</button>
				<button class="red" @click="deleteRole">Delete</button>
			</div>
		</popup>
	<% } %>
</main>


<script src="/js/vue.js"></script>
<script src="/js/socket.io.js"></script>
<script src="/Components/Sidebar.js"></script>
<script src="/Components/Popup.js"></script>
<script src="/Components/Dropdown.js"></script>
<script src="/Components/Toggle.js"></script>
<script src="/Components/Tag.js"></script>

<script type="text/javascript">
	window.socket = io()
</script>
<script src="/js/admin/roles.js"></script>
</body>
</html>
