<!DOCTYPE html>
<html lang="en">
<head>
	<!--    MAIN INFO    -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<title>Admin Panel</title>

	<!--    FONTS    -->
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

	<!--    MAIN CSS    -->
	<link rel="stylesheet" href="/css/admin/admin.css">
	<link rel="stylesheet" href="/Components/Sidebar.css">
	<link rel="stylesheet" href="/Components/Popup.css">
	<link rel="stylesheet" href="/Components/Dropdown.css">
	<link rel="stylesheet" href="/css/admin/products.css">

	<!--    FAVICON    -->
	<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicons/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicons/favicon-16x16.png">
	<link rel="manifest" href="/assets/favicons/site.webmanifest">
	<link rel="mask-icon" href="/assets/favicons/safari-pinned-tab.svg" color="#ff8e00">
	<link rel="shortcut icon" href="/assets/favicons/favicon.ico">
	<meta name="msapplication-TileColor" content="#da532c">
	<meta name="msapplication-config" content="/assets/favicons/browserconfig.xml">
	<meta name="theme-color" content="#ffffff">

	<% if (!permissions) { %>
		<script type="text/javascript">window.location.href = '/admin'</script>
	<% } %>
</head>
<body>

<main v-cloak>
	<sidebar page="products"></sidebar>

	<div class="app">
		<div class="app__container">
			<h1>Products</h1>
			<div class="card min-height">
				<div class="card__container">
					<div class="card__interaction">
						<dropdown v-model="role" :items="['all', ...productRoleNames]"></dropdown>

						<% if (permissions.includes('m') || permissions.includes('c')) { %>
							<button class="add" @click="$refs.addProduct.open()">Add Products</button>
						<% } %>
					</div>
					<div class="table">
						<div class="table__header">
							<span class="heading heading-product_id">Product Id</span>
							<span class="heading heading-role">Role</span>
							<span class="heading heading-currency">Currency</span>
							<span class="heading heading-interaction"></span>
						</div>
						<div class="table__line"></div>
						<div class="table__content">
							<div class="table__row" v-for="product in paginatedProducts">
								<div class="product-id">
									<span>{{ product.id }}</span>
									<a
										:href="'https://dashboard.stripe.com/prices/' + product.id"
										target="_blank"
									>
										<img src="/assets/icon_link.svg" alt="Link">
									</a>
								</div>
								<div class="role">
									<tag :text="product.role.name" :background-color="product.role.color"></tag>
								</div>
								<div class="currency">
									<span>{{ product.currency }}</span>
								</div>

								<div class="table__row__interaction">
									<% if (permissions.includes('m') || permissions.includes('d')) { %>
										<button @click="openDeleteProduct(product.id)">
											<img src="/assets/icon_delete.svg" alt="Delete">
										</button>
									<% } %>
								</div>
							</div>
						</div>
					</div>
					<button
						class="load-more"
						@click="listSize += initSize"
						v-if="filteredProducts.length > listSize"
					>Load More</button>
				</div>
			</div>
		</div>
	</div>

	<% if (permissions.includes('m') || permissions.includes('c')) { %>
		<popup ref="addProduct">
			<div class="field">
				<p>Product Id</p>
				<div class="input">
					<label><input type="text" v-model="addProductObject.id" placeholder="Product Id"></label>
				</div>
			</div>
			<div class="field">
				<p>Role</p>
				<dropdown v-model="addProductObject.role" :items="roleNames"></dropdown>
			</div>
			<div class="field">
				<p>Currency</p>
				<div class="input">
					<label><input type="text" v-model="addProductObject.currency" placeholder="Currency"></label>
				</div>
			</div>

			<div class="popup__interaction">
				<button @click="$refs.addProduct.close()">Cancel</button>
				<button @click="addProduct">Add</button>
			</div>
		</popup>
	<% } %>

	<% if (permissions.includes('m') || permissions.includes('d')) { %>
		<popup ref="deleteProduct" @close="deleteProductId=''">
			<p class="field title">Are you sure you want to delete this product?</p>
			<div class="popup__interaction">
				<button @click="$refs.deleteProduct.close()">Cancel</button>
				<button class="red" @click="deleteProduct">Delete</button>
			</div>
		</popup>
	<% } %>
</main>


<script src="/js/vue.js"></script>
<script src="/js/socket.io.js"></script>
<script src="/Components/Sidebar.js"></script>
<script src="/Components/Popup.js"></script>
<script src="/Components/Dropdown.js"></script>
<script src="/Components/Tag.js"></script>

<script type="text/javascript">
	window.socket = io()
	window.roles = JSON.parse('<%- JSON.stringify(roles) %>')
</script>
<script src="/js/admin/products.js"></script>
</body>
</html>
